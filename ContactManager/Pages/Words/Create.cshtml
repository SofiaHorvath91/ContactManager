@page
@model ContactManager.Pages.Words.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Word</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Word.WordString" class="control-label"></label>
                <input asp-for="Word.WordString" class="form-control" />
                <span asp-validation-for="Word.WordString" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Word.Fandom" class="control-label"></label>
                <select asp-for="Word.Fandom" name="fandomName" class="form-control" asp-items="@Model.WordsFandoms">
                    <option value="">-- Select Fandom --</option>
                </select>
                <span asp-validation-for="Word.Fandom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div class="row">
    <div class="col-md-4">
        <a class="btn btn-xs btn-dark" asp-page="/Games/Index">Back to Games</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
