@page
@model ContactManager.Pages.Favourites.CreateModel

@{
    ViewData["Title"] = "Create";
    string type = Model.FavType.ToString();
    string plural = type + "s";
}

<h1>Add to Favourites</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <p class="main-text">Do you wish to add this @type.ToLower() to your favourites?</p>
            <input type="hidden" name="favid" value="@Model.FavID"/>
            <input type="hidden" name="favtype" value="@Model.FavType"/>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="pt-1">
    <a class="btn btn-xs btn-dark" asp-page="/@plural/Details" asp-route-id="@Model.FavID">Back</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
