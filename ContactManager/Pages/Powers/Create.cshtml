@page
@model ContactManager.Pages.Powers.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Power</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Power.PowerName" class="control-label"></label>
                <input asp-for="Power.PowerName" class="form-control" />
                <span asp-validation-for="Power.PowerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Power.PowerDescription" class="control-label"></label>
                <input asp-for="Power.PowerDescription" class="form-control" />
                <span asp-validation-for="Power.PowerDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Power.PowerType" class="control-label"></label>
                <select asp-for="Power.PowerType" class="form-control" asp-items="Html.GetEnumSelectList<PowerType>()">
                    <option value="">-- Select Type --</option>
                </select>
                <span asp-validation-for="Power.PowerType" class="text-danger"></span>
            </div>
            <input type="hidden" name="characterID" value="@Model.CharacterID"/>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="row">
    <div class="col-md-4">
        <a class="btn btn-xs btn-dark" asp-page="/Characters/Details" asp-route-id="@Model.CharacterID">Back</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
