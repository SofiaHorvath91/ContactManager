@page
@model ContactManager.Pages.Powers.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this power?</h3>
<div class="row">
    <h4>Power</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Power.PowerName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Power.PowerName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Power.PowerDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Power.PowerDescription)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Power.PowerType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Power.PowerType)
        </dd>
        @if ((await AuthorizationService.AuthorizeAsync(
        User, Model.Power, ModelsOperations.Update)).Succeeded)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Power.Status)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Power.Status)
            </dd>
        }
    </dl>
    
    <div class="row">
        <form method="post">
            <input type="hidden" asp-for="Power.PowerID" />
            <input type="submit" value="Delete" class="btn btn-danger" />
            <div class="pt-1">
                <a class="btn btn-xs btn-dark" asp-page="/YourWorld">Back to Your World</a>
            </div>
        </form>
    </div>
</div>
